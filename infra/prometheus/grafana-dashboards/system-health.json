{
  "dashboard": {
    "title": "SIGMAX System Health",
    "tags": ["sigmax", "system", "infrastructure"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-30m",
      "to": "now"
    },
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Service Status",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 24, "h": 4},
        "targets": [
          {
            "expr": "up{job=\"sigmax\"}",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center",
          "orientation": "horizontal",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "name"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [
              {"type": "value", "options": {"0": {"text": "DOWN"}}},
              {"type": "value", "options": {"1": {"text": "UP"}}}
            ]
          }
        }
      },
      {
        "id": 2,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "CPU %", "format": "percent", "min": 0, "max": 100},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "100 * (1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes))",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "Memory %", "format": "percent", "min": 0, "max": 100},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Network I/O",
        "type": "graph",
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total[1m])",
            "legendFormat": "RX {{device}}",
            "refId": "A"
          },
          {
            "expr": "rate(node_network_transmit_bytes_total[1m])",
            "legendFormat": "TX {{device}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"label": "Bytes/sec", "format": "Bps"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Disk I/O",
        "type": "graph",
        "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(node_disk_read_bytes_total[1m])",
            "legendFormat": "Read {{device}}",
            "refId": "A"
          },
          {
            "expr": "rate(node_disk_written_bytes_total[1m])",
            "legendFormat": "Write {{device}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"label": "Bytes/sec", "format": "Bps"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Postgres Connections",
        "type": "graph",
        "gridPos": {"x": 0, "y": 20, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{datname=\"sigmax\"}",
            "legendFormat": "Active connections",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "Connections", "format": "short"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "ClickHouse Query Rate",
        "type": "graph",
        "gridPos": {"x": 8, "y": 20, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "rate(clickhouse_query_total[1m])",
            "legendFormat": "Queries/sec",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "Queries/sec", "format": "short"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "Redis Memory Usage",
        "type": "gauge",
        "gridPos": {"x": 16, "y": 20, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "redis_memory_used_bytes / redis_memory_max_bytes * 100",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 9,
        "title": "ZeroMQ Message Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 28, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(sigmax_zmq_messages_sent_total[1m])",
            "legendFormat": "{{stream_id}} sent",
            "refId": "A"
          },
          {
            "expr": "rate(sigmax_zmq_messages_received_total[1m])",
            "legendFormat": "{{stream_id}} received",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"label": "Messages/sec", "format": "short"},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "title": "Error Rate by Service",
        "type": "graph",
        "gridPos": {"x": 12, "y": 28, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(sigmax_errors_total[1m])",
            "legendFormat": "{{service}} - {{error_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "Errors/sec", "format": "short"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [1], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "High Error Rate",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 11,
        "title": "GC Pause Time (Python)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 36, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(python_gc_collections_total[1m])",
            "legendFormat": "GC gen{{generation}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "Collections/sec", "format": "short"},
          {"format": "short"}
        ]
      },
      {
        "id": 12,
        "title": "Open File Descriptors",
        "type": "graph",
        "gridPos": {"x": 12, "y": 36, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "process_open_fds",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "File descriptors", "format": "short"},
          {"format": "short"}
        ]
      },
      {
        "id": 13,
        "title": "Log Events by Level",
        "type": "logs",
        "gridPos": {"x": 0, "y": 44, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "{job=\"sigmax\"}",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": false,
          "wrapLogMessage": false,
          "sortOrder": "Descending"
        }
      }
    ]
  }
}
