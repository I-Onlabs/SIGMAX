# SIGMAX Environment Configuration Example
# Copy this file to .env and fill in your values

# Environment
SIGMAX_ENV=development
SIGMAX_PROFILE=a

# Exchange API Keys (NEVER commit actual keys!)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here

BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here

# Database URLs
POSTGRES_URL=postgresql://sigmax:sigmax@localhost:5432/sigmax
CLICKHOUSE_URL=clickhouse://localhost:9000/sigmax

# LLM API Keys (for Profile B with L4 enabled)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Observability
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Redis (optional)
REDIS_URL=redis://localhost:6379/0
