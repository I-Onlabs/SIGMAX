# SIGMAX Configuration Example
# Copy to .env and update with your values

# ============================================================================
# LLM Configuration
# ============================================================================

# OpenAI (recommended for production)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Ollama (for local/development)
OLLAMA_MODEL=llama2
OLLAMA_BASE_URL=http://localhost:11434

# ============================================================================
# Agent Configuration
# ============================================================================

# FinRobot Integration (default: enabled)
FINROBOT_ENABLED=true

# RD-Agent Integration (default: enabled)
RDAGENT_ENABLED=true

# ============================================================================
# Database & Infrastructure (REQUIRED for production)
# ============================================================================

# PostgreSQL Database
POSTGRES_DB=sigmax
POSTGRES_USER=sigmax
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD_IN_PRODUCTION

# Redis (optional password)
REDIS_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD_IN_PRODUCTION

# Grafana Admin
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD_IN_PRODUCTION

# ============================================================================
# Secrets Management (Optional - for production deployments)
# ============================================================================

# Enable HashiCorp Vault for secrets
USE_VAULT=false
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=your_vault_token_here

# ============================================================================
# Risk Management
# ============================================================================

# Risk profile (conservative, balanced, aggressive)
RISK_PROFILE=conservative

# Max position size (% of portfolio)
MAX_POSITION_SIZE=0.10

# Max daily loss (% of portfolio)
MAX_DAILY_LOSS=0.02
