# SIGMAX Configuration
# Copy this file to .env and fill in your values

# ============================================
# TRADING CONFIGURATION
# ============================================

# Exchange (binance, coinbase, kraken, etc.)
EXCHANGE=binance

# API Credentials (use testnet for safety)
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here
TESTNET=true

# Trading Mode (paper, live)
TRADING_MODE=paper

# ============================================
# SAFETY LIMITS
# ============================================

# Risk Management
MAX_DAILY_LOSS=10
MAX_POSITION_SIZE=15
MAX_OPEN_TRADES=3
STOP_LOSS_PCT=1.5
TAKE_PROFIT_PCT=3.0
MAX_LEVERAGE=1
TOTAL_CAPITAL=50

# Auto-pause triggers
CONSECUTIVE_LOSS_LIMIT=3
API_ERROR_THRESHOLD=5
MIN_SENTIMENT_THRESHOLD=-0.3
MAX_SLIPPAGE_PCT=1.0

# ============================================
# LLM CONFIGURATION
# ============================================

# Local LLM (Ollama - recommended)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1

# OpenAI (optional)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic (optional)
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-3-opus-20240229

# Groq (optional, for fast inference)
GROQ_API_KEY=gsk_...

# ============================================
# TELEGRAM BOT
# ============================================

TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=your_chat_id
TELEGRAM_ENABLED=true

# ============================================
# QUANTUM COMPUTING
# ============================================

# Qiskit Backend (qiskit_aer, ibmq, etc.)
QUANTUM_BACKEND=qiskit_aer
QUANTUM_SHOTS=1000
QUANTUM_OPTIMIZER=COBYLA
QUANTUM_MAX_ITER=100
QUANTUM_ENABLED=true

# IBM Quantum (optional)
IBMQ_TOKEN=your_ibmq_token

# ============================================
# DATABASE
# ============================================

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=sigmax
POSTGRES_USER=sigmax
POSTGRES_PASSWORD=changeme
POSTGRES_URL=postgresql://sigmax:changeme@localhost:5432/sigmax

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# ClickHouse (time-series data)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DB=sigmax
CLICKHOUSE_URL=http://localhost:8123

# ============================================
# MESSAGE QUEUE
# ============================================

# NATS
NATS_URL=nats://localhost:4222
NATS_USER=
NATS_PASSWORD=

# Kafka (optional)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_ENABLED=false

# ============================================
# OBSERVABILITY
# ============================================

# Prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_URL=http://localhost:9090

# Grafana
GRAFANA_PORT=3001
GRAFANA_URL=http://localhost:3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FILE=logs/sigmax.log

# Sentry (optional)
SENTRY_DSN=

# ============================================
# API SERVER
# ============================================

# FastAPI
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================
# UI CONFIGURATION
# ============================================

# Web UI
UI_PORT=3000
UI_HOST=localhost

# Voice control
VOICE_ENABLED=true

# ============================================
# BLOCKCHAIN INTEGRATION
# ============================================

# Ethereum
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key
ETH_CHAIN_ID=1

# BSC
BSC_RPC_URL=https://bsc-dataseed.binance.org/

# Polygon
POLYGON_RPC_URL=https://polygon-rpc.com/

# Arbitrum
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# Base
BASE_RPC_URL=https://mainnet.base.org

# Solana
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# ============================================
# DATA PROVIDERS
# ============================================

# CoinGecko
COINGECKO_API_KEY=

# CoinMarketCap
CMC_API_KEY=

# Messari
MESSARI_API_KEY=

# The Graph
THEGRAPH_API_KEY=

# GoldRush (Covalent)
GOLDRUSH_API_KEY=

# Chainlink
CHAINLINK_API_KEY=

# ============================================
# COMPLIANCE & SECURITY
# ============================================

# KYC/AML
CHAINALYSIS_API_KEY=
ELLIPTIC_API_KEY=

# Policy enforcement
OPA_URL=http://localhost:8181
TWO_MAN_RULE_ENABLED=true

# Privacy
ZK_PROOFS_ENABLED=true
PII_DETECTION_ENABLED=true

# ============================================
# DEVELOPMENT
# ============================================

# Debug mode
DEBUG=false
DEV_MODE=false

# Hot reload
HOT_RELOAD=false

# Profiling
PROFILING_ENABLED=false

# ============================================
# FEATURE FLAGS
# ============================================

FEATURE_ARBITRAGE=true
FEATURE_QUANTUM=true
FEATURE_MEV_SHIELD=true
FEATURE_VOICE_CONTROL=true
FEATURE_3D_UI=true
FEATURE_HFT=false
FEATURE_NARRATIVE_TRADING=false
